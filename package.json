{
  "name": "@powerkernel/postgresql-client",
  "version": "1.0.2",
  "description": "PostgreSQL client used by Power Kernel projects",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "update": "npx npm-check-updates",
    "upgrade": "npx npm-check-updates -u",
    "release": "npx standard-version && git push --follow-tags origin main",
    "test": "jest --coverage",
    "testw": "jest --coverage --watch",
    "build": "npm run clean && tsc",
    "clean": "del ./dist/*",
    "lint": "eslint ./src --ext .ts --fix",
    "prepare": "husky install"
  },
  "keywords": [
    "power",
    "kernel",
    "postgresql",
    "client"
  ],
  "author": {
    "name": "Harry Tang",
    "email": "harry@powerkernel.com",
    "url": "https://powerkernel.com"
  },
  "license": "ISC",
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@commitlint/cli": "17.6.5",
    "@commitlint/config-conventional": "17.6.5",
    "@types/jest": "29.5.2",
    "@types/pg": "8.10.2",
    "@typescript-eslint/eslint-plugin": "5.59.9",
    "@typescript-eslint/parser": "5.59.9",
    "del-cli": "5.0.0",
    "eslint": "8.42.0",
    "eslint-config-prettier": "8.8.0",
    "husky": "8.0.3",
    "jest": "29.5.0",
    "prettier": "2.8.8",
    "ts-jest": "29.1.0",
    "typescript": "5.1.3"
  },
  "dependencies": {
    "pg": "8.11.0"
  }
}
